<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:weather="clr-namespace:Asv.Drones.Gui.Weather"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    <Design.PreviewWith>
        <Border Padding="20">
            <Border Padding="20" MinHeight="300">
                <Border Background="{DynamicResource SolidBackgroundFillColorBase}" 
                        Opacity="0.8" CornerRadius="{DynamicResource ControlCornerRadius}" 
                        ClipToBounds="True">
                    <StackPanel>
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <avalonia:MaterialIcon Kind="Temperature"/>
                                <TextBlock VerticalAlignment="Center" Text="30 C"/>
                                <weather:WindIndicator Width="20" Height="20" Value="4" Angle="120"/>
                                <TextBlock VerticalAlignment="Center" Text="10 m/s"/>
                            </StackPanel>    
                        </Button>
                    </StackPanel>
                    
                </Border>
            </Border>
        </Border>
    </Design.PreviewWith>
    <StyleInclude Source="avares://Asv.Drones.Gui.Weather/Controls/WindIndicator.axaml"/>
</Styles>
