<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:weather="clr-namespace:Asv.Drones.Gui.Weather"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    <Design.PreviewWith>
        <Border Padding="20">
            <Border Padding="20" MinHeight="300">
                <Border Background="{DynamicResource SolidBackgroundFillColorBase}" 
                        Opacity="0.8" CornerRadius="{DynamicResource ControlCornerRadius}" 
                        ClipToBounds="True">
                    <StackPanel>
                        <weather:WindIndicator Width="20" Height="20"/>
                    </StackPanel>
                </Border>
            </Border>
        </Border>
    </Design.PreviewWith>
    <StyleInclude Source="Controls/WindIndicator.axaml"/>
</Styles>
